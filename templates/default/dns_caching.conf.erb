# Generated by Chef
# Local modifications will be overwritten

# Listen only on the loopback interface
interface=lo

# Disable DHCP service
no-dhcp-interface=lo

# Only bind to the loopback interface
bind-interfaces

<% if node['platform'] == 'ubuntu' && node['platform_version'].to_i >= 12 -%>
# Don't read /etc/resolv.conf; get servers from this file instead
no-resolv

# Don't poll /etc/resolv.conf or other resolv files for changes
no-poll

# Nameservers
<% node['resolver']['nameservers'].each do |nameserver| -%>
<% if nameserver != '127.0.0.1' -%>
server=<%= nameserver %>
<% end -%>
<% end -%>
<% end -%>